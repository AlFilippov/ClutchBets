<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lightBlue"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/titleSports"
                style="@style/BaseTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:textSize="28sp"
                tools:text="Soccer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="@color/blue60"
                    app:cardCornerRadius="20dp"
                 >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageSports"
                            android:layout_marginTop="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/teamSports"
                            style="@style/BaseTextAppearance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:maxLines="2"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            tools:text="New York" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/scoreSports"
                            style="@style/BaseTextAppearance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            tools:text="1.2" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/vsSports"
                    style="@style/BaseTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:text="VS"
                    tools:text="VS" />
<androidx.cardview.widget.CardView
    android:layout_width="150dp"
    android:layout_height="130dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/blue60"
    app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageSportsOne"
                        android:layout_marginTop="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/teamSportsOne"
                        style="@style/BaseTextAppearance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:maxLines="2"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        tools:text="New York" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/scoreSportsOne"
                        style="@style/BaseTextAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        tools:text="1.2" />
                </LinearLayout>
</androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/homeTeam"
                style="@style/BaseTextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>